---
import { Image } from "astro:assets";
import Card from "../ui/Card.astro";
import Section from "./Section.astro";

import propImg from "../../assets/pics/proposal-pic.png";
import SectionTitle from "../ui/SectionTitle.astro";
---

<Section>
	<div class="mt-[140px] mb-5">
		<SectionTitle
			sectionTitle="Clankster"
			description="Hold Clankster, invest in the future. Rewards, innovation, and growth—together."
			classes={{
				description: "sm:w-[580px]",
			}}
		/>
		<Card>
			<div
				class="relative mb-[163px] flex rounded-[45px] bg-[#F3F3F3] p-[60px]"
			>
				<div class="flex w-full flex-col gap-[26px] md:w-[50%]">
					<h2 class="text-[2.375rem] font-medium">
						Want to build? get in touch!
					</h2>
					<p class="text-lg">
						Clankster supports creators and developers with funding, visibility,
						and a dedicated community. Let’s turn your idea into reality and
						grow together!
					</p>
					<a href="mailto:ideas@clankster.online" class="btn-primary underline">
						Pitch your idea
					</a>
				</div>
				<picture
					class="absolute top-[-15%] right-[-10%] hidden h-[450px] items-center justify-center md:flex lg:right-0"
				>
					<Image
						src={propImg}
						alt="This is an illustration"
						class="hidden md:flex lg:h-full lg:w-auto"
					/>
				</picture>
			</div>
		</Card>
	</div>
</Section>
